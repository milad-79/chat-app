{
  "compilerOptions": {
    "target": "es6",
    "module": "Commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_modules/@types"],
    "types": ["jest"]
  },
  "include": ["src/**/*.ts", "prisma.config.ts", "tests/**/*.test.ts"],
  "exclude": ["node_modules"]
}
